{
  "name": "obatku-backend",
  "version": "1.0.0",
  "description": "Agricultural Medicine Management System Backend API",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:fast": "jest --maxWorkers=1 --passWithNoTests",
    "test:unit": "jest --testPathPattern=src --testPathIgnorePatterns=integration --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "test:auth": "jest --testPathPattern=auth --passWithNoTests",
    "test:inventory": "jest --testPathPattern=inventory --passWithNoTests",
    "test:submissions": "jest --testPathPattern=submissions --passWithNoTests",
    "test:transactions": "jest --testPathPattern=transactions --passWithNoTests",
    "test:users": "jest --testPathPattern=users --passWithNoTests",
    "test:security": "jest --testPathPattern=security --passWithNoTests",
    "test:utils": "jest --testPathPattern=utils --passWithNoTests",
    "test:qrcode": "jest --testPathPattern=qrcode --passWithNoTests",
    "test:clean": "jest --clearCache",
    "test:debug": "jest --detectOpenHandles --forceExit --passWithNoTests",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "agriculture",
    "medicine",
    "management",
    "api",
    "typescript",
    "nodejs",
    "prisma",
    "postgresql"
  ],
  "author": "Obatku Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.22.4",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.6.2",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "sharp": "^0.33.0",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.4.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/moment": "^2.13.0",
    "@types/lodash": "^4.14.202",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/compression": "^1.7.5",
    "@types/csv-parser": "^3.0.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "prisma": "^5.7.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "babel-jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
